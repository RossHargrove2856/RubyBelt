<!DOCTYPE html>
<html>
<head>
	<title>DojoMusicHub</title>
	<meta charset="utf-8">
</head>
<body>
	<a href="/songs/dashboard">Dashboard</a> <a href="/users/logout" data-method="delete">Logout</a>
	<h2><%= @user.first_name %> <%= @user.last_name %>'s Playlist</h2>
	<div>
		<table>
			<thead>
				<tr>
					<td>Artist</td>
					<td>Title</td>
					<td>Times Added</td>
				</tr>
			</thead>
			<tbody>
				<% @playlists.each do |playlist| %>
					<tr><td><%= playlist.song.artist %></td><td><%= playlist.song.title %></td><td><%= playlist.times_added %></td></tr>
				<% end %>
			</tbody>
		</table>
	</div>
</body>
</html>
