<!DOCTYPE html>
<html>
<head>
	<title>DojoMusicHub</title>
	<meta charset="utf-8">
</head>
<body>
	<a href="/songs/dashboard">Dashboard</a> <a href="/users/logout" data-method="delete">Logout</a>
	<h2>Others who added <%= @song.artist %> - <%= @song.title %></h2>
	<div>
		<table>
			<thead>
				<tr>
					<td>Name</td>
					<td>Times Added</td>
				</tr>
			</thead>
			<tbody>
				<% @playlists.each do |playlist| %>
					<tr><td><a href="/users/<%= playlist.user.id %>"><%= playlist.user.first_name %> <%= playlist.user.last_name %></a></td><td><%= playlist.times_added %></td></tr>
				<% end %>
			</tbody>
		</table>
	</div>
</body>
</html>
